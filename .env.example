# OCF Front Environment Variables Example
# Copy this file to .env.local and adjust values as needed

# API Configuration
VITE_API_URL=localhost:8000
VITE_PROTOCOL=http

# Demo Mode (for testing without backend)
VITE_DEMO_MODE=false

# Feature Flags (Pilot Implementation)
# Enable/disable features for testing and gradual rollout
VITE_FEATURE_FLAG_THEME_CUSTOMIZATION=true
VITE_FEATURE_FLAG_ARCHIVE_GENERATIONS=true
VITE_FEATURE_FLAG_SSH_KEY_MANAGEMENT=true

# Course Management Features
VITE_FEATURE_FLAG_COURSE_CONCEPTION=true

# Terminal/Labs Features
VITE_FEATURE_FLAG_TERMINAL_MANAGEMENT=true

# Documentation Features
VITE_FEATURE_FLAG_HELP_DOCUMENTATION=true

# Future feature flags can be added here as needed
# VITE_FEATURE_FLAG_NEW_COURSE_BUILDER=false
# VITE_FEATURE_FLAG_ADVANCED_ANALYTICS=false